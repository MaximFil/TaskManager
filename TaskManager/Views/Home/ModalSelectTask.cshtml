@model IEnumerable<TaskManager.Models.Task>

<div class="modal-content">
    <div class="modal-header">
        <h2>Задачи</h2>
    </div>
    <div class="modal-body">
        
    <table>
        <tr>
            <th>Select</th>
            <th>Title</th>
            <th>Description</th>
            <th>StartDate</th>
            <th>EndDate</th>
        </tr>
        @foreach(var task in Model)
        {
            <tr>
            <td><input name="selectTask" type="radio" value=@task.Title/></td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.StartDate</td>
                <td>@task.EndDate</td>
                <td>@Html.ActionLink("Select","ModelSelectTask","Home",new { id=task.Id})</td>
            </tr>
        }
    </table>
    <form method="post">
        <input type="submit" value="Select" />
    </form>
    </div>
</div>
